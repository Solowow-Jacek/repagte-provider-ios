<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/background_color"
    tools:context="com.repgate.doctor.ui.activities.HealthcareProviderActivity">

    <include layout="@layout/layout_actionbar" />
    
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@mipmap/healthcare_user2"
        android:scaleType="centerCrop"
        android:layout_margin="1dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:orientation="vertical">

        <info.hoang8f.widget.FButton
            android:id="@+id/btnOfficer"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            fbutton:buttonColor="@color/mdtp_white"
            fbutton:shadowColor="@color/darker_gray"
            fbutton:shadowEnabled="true"
            fbutton:shadowHeight="2dp"
            fbutton:cornerRadius="5dp"
            android:text="@string/officers"
            android:textColor="@color/font_color"
            android:textSize="16sp"
            android:textAlignment="textStart"
            android:drawableLeft="@mipmap/icon_officer_gray_padding1"
            android:drawableRight="@mipmap/pink_chevron_small"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="10dp"
            android:paddingLeft="@dimen/activity_horizontal_margin"/>

        <info.hoang8f.widget.FButton
            android:id="@+id/btnSaleRep"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            fbutton:buttonColor="@color/mdtp_white"
            fbutton:shadowColor="@color/darker_gray"
            fbutton:shadowEnabled="true"
            fbutton:shadowHeight="2dp"
            fbutton:cornerRadius="5dp"
            android:text="@string/sale_representatives"
            android:textColor="@color/font_color"
            android:textSize="16sp"
            android:textAlignment="textStart"
            android:drawableLeft="@mipmap/icon_rep_gray_padding1"
            android:drawableRight="@mipmap/pink_chevron_small"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="10dp"
            android:paddingLeft="@dimen/activity_horizontal_margin"/>

        <info.hoang8f.widget.FButton
            android:id="@+id/btnCompany"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            fbutton:buttonColor="@color/mdtp_white"
            fbutton:shadowColor="@color/darker_gray"
            fbutton:shadowEnabled="true"
            fbutton:shadowHeight="2dp"
            fbutton:cornerRadius="5dp"
            android:text="@string/manufacturers"
            android:textColor="@color/font_color"
            android:textSize="16sp"
            android:textAlignment="textStart"
            android:drawableLeft="@mipmap/icon_hostpital_gray_padding1"
            android:drawableRight="@mipmap/pink_chevron_small"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="10dp"
            android:paddingLeft="@dimen/activity_horizontal_margin"/>

    </LinearLayout>
</LinearLayout>

